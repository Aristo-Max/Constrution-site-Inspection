{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "jsx": "react-jsx",                 
    "esModuleInterop": true,            
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,               
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "*": ["types/*", "*"]   // ✅ fallback to node_modules too
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src",
    "types",
    "global.d.ts"   // ✅ force-include global.d.ts
  ],
  "exclude": ["node_modules", "Pods"]
}
